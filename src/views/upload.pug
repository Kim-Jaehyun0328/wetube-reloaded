extends base.pug

block content
  if errorMessage
    span=errorMessage
  form(method="POST", enctype = "multipart/form-data")
    label(for="video") Video File
    input(type= "file", accept = "video/*", required, id ="video", name = "video") 
    input(name="title", placeholder="Title", required, maxlength = 80)
    input(name="description", placeholder="Description", required, minlength = 5)
    input(name="hashtags", placeholder="Hashtags, separated by comma.", required)
    input(value= "upload", type ="submit")